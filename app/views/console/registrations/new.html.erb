<%= form_for(@player, :as => resource_name, :url => console_registration_path,:html=>{:class=>"form-signin",:id=>"signup-form"} ) do |f| %>
  <%= devise_error_messages! %>

  	<h3 class="form-signin-heading">请输入注册信息</h3>
  	<%= f.text_field :name, :autofocus => true,:class=>"form-control",:placeholder=>"姓名",:required=>"required" %>
	<%= f.email_field :email, :autofocus => true,:class=>"form-control",:placeholder=>"邮箱",:required=>"required" %>
	<%= f.password_field :password,:class=>"form-control",:placeholder=>"密码",:required=>"required" %>
	<%= f.password_field :password_confirmation,:class=>"form-control",:placeholder=>"确认密码",:required=>"required" %>
	<div><%= f.submit "注 册",:class=>"btn btn-lg btn-primary btn-block" %></div>

<% end %>

<script type="text/javascript">
$("#signup-form").validate();
</script>