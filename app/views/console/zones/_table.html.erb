
	

<table class="table">
<thead>
<tr>
	<th>区域代码</th>
	<th>所属地区</th>
	<th>备注</th>
	<th>创建时间</th>
	<th>状态</th>
	<th>操作</th>
</tr>
</thead>
<tbody>
<% @zones.each do |zone|%>
<tr data-id="<%= zone.id %>">
<td><%= zone.code %></td>
<td><%= link_to zone.region.name,console_region_path(zone.region) if zone.region %></td>
<td><%= zone.remark || '#' %></td>
<td><%= zone.created_at %></td>
<td><%= zone.normal ? "" : "" %></td>
<td>
<div class="btn-group btn-group-sm">
	<button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
		操 作 <span class="caret"></span>
	</button>
	<ul class="dropdown-menu" role="menu">
	<li><%= link_to raw('<i class="glyphicon glyphicon-edit"></i> 修改'),edit_console_region_zone_path(@region,zone) %></li>
	<% if can? :destroy, zone %>
	<li>
	<%= link_to raw('<i class="glyphicon glyphicon-trash"></i> 删除'),console_region_zone_path(@region,zone),:method=>:delete,:format=>"js",:remote=>true,:confirm=>"Are you sure?" %>
	</li>
	<%end%>
	</ul>
</div>
</td>
</tr>
<%end%>
</tbody>
</table>

