<% if @page.errors.any? %>
<div class="alert alert-block alert-danger fade in">
<button type="button" class="close" data-dismiss="alert">×</button>
<h4 class="alert-heading">
  <%= pluralize(@page.errors.count, "错误") %> 页面被禁止保存
</h4>
<ul>
<% @page.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
<% end %>
</ul>
</div>

<% end %>


<%= form_for [:console,@page],:html=>{:class=>"form form-horizontal",:role=>"form",:id=>"page-form"} do |form| %>
<div class="form-group">
  <label for="" class="col-lg-2 control-label">页面标题:</label>
  <div class="col-lg-3 inline">
    <%= form.text_field :title,:placeholder=>"标题",:class=>"form-control",:required=>"required" %>
  </div>
</div>

<div class="form-group">
<label for="" class="col-lg-2 control-label"></label>
<div class="col-lg-3">
<label class="checkbox-inline" title="Banner">
  <%= form.check_box :is_banner %>Banner
</label>
<label class="checkbox-inline" title="原创">
  <%= form.check_box :original %>Original
</label>
<label class="checkbox-inline" title="Case">
  <%= form.check_box :is_case %>Case
</label>

</div>
<span class="help-block">Banner广告 | Original原创 | Case案例</span>
</div>

<div class="form-group">
  <label for="" class="col-lg-2 control-label">URL:</label>
  <div class="col-lg-3">
     <%= form.text_field :url,:placeholder=>"URL",:class=>"form-control",:required=>"required",:minlength=>5 %>
  </div>
</div>

<div class="form-group">
  <label for="" class="col-lg-2 control-label">图片URL:</label>
  <div class="col-lg-3">
     <%= form.text_field :img_url,:placeholder=>"图片URL",:class=>"form-control" %>
  </div>
</div>

<div class="form-group">
  <label for="" class="col-lg-2 control-label">关键字:</label>
  <div class="col-lg-3">
     <%= form.text_field :tags,:placeholder=>"关键字",:value=>@page.tag_list,:class=>"form-control" %>
  </div>
  <span class="help-block">多个用英文的','分割,例如：aws,ec2,云主机</span>
</div>

<div class="form-group">
<label for="" class="col-lg-2 control-label">发布日期:</label>
<div class="col-lg-3">
 <%= form.text_field :published_at,:placeholder=>"发布日期",:class=>"form-control",:id=>"published_at" %>
</div>

</div>

<div class="form-group">
<label for="" class="col-lg-2 control-label">内容简要:</label>
<div class="col-lg-3">
 <%= form.text_area :summary,:placeholder=>"内容简要",:class=>"form-control" %>
</div>
</div>

<div class="form-group">
  <label for="" class="col-lg-2 control-label"></label>
  <div class=" col-lg-5">
   
  </div>
</div>


<div class="form-group">
  <div class="col-lg-offset-2 col-lg-10">
     <%= form.submit :"提 交",:class=>"btn btn-primary" %>
     <%= link_to "返回列表", list_console_pages_path %>
  </div>
</div>
<%end%>
<script type="text/javascript">

$(function(){
  $("#published_at").datepicker({dateFormat:"yy-mm-dd",maxDate:new Date()});
  $("#page-form").validate();
});


</script>