<%= form_for [:console,@page],:html=>{:class=>"form form-horizontal",:role=>"form",:id=>"page-form"} do |form| %>
<div class="form-group">
  <label for="" class="col-lg-2 control-label">页面标题:</label>
  <div class="col-lg-3">
    <%= form.text_field :title,:placeholder=>"标题",:class=>"form-control",:required=>"required" %>
  </div>
</div>
<div class="form-group">
  <label for="" class="col-lg-2 control-label">URL:</label>
  <div class="col-lg-3">
     <%= form.text_field :url,:placeholder=>"URL",:class=>"form-control",:required=>"required",:minlength=>5 %>
  </div>
</div>

<div class="form-group">
  <label for="" class="col-lg-2 control-label">图片URL:</label>
  <div class="col-lg-3">
     <%= form.text_field :url,:placeholder=>"图片URL",:class=>"form-control" %>
  </div>
</div>

<div class="form-group">
  <label for="" class="col-lg-2 control-label">关键字:</label>
  <div class="col-lg-3">
     <%= form.text_field :keywords,:placeholder=>"关键字",:class=>"form-control",:required=>"required",:minlength=>5 %>
  </div>
</div>

<div class="form-group">
<label for="" class="col-lg-2 control-label">发布时间:</label>
<div class="col-lg-3">
 <%= form.text_field :published_at,:placeholder=>"发布时间",:class=>"form-control" %>
</div>
</div>

<div class="form-group">
<label for="" class="col-lg-2 control-label">内容简要:</label>
<div class="col-lg-3">
 <%= form.text_area :summary,:placeholder=>"内容简要",:class=>"form-control" %>
</div>
</div>


<div class="form-group">
  <label for="" class="col-lg-2 control-label">原创:</label>
  <div class="checkbox col-lg-3">
   <label class="">
    <%= form.check_box :original %>玩家原创
    </label>

  </div>
</div>

<div class="form-group">
  <label for="" class="col-lg-2 control-label">Banner:</label>
  <div class="checkbox col-lg-3">
   <label>
    <%= form.check_box :is_banner %>Banner
    </label>
  </div>
</div>

<div class="form-group">
  <div class="col-lg-offset-2 col-lg-10">
     <%= form.submit :"提 交",:class=>"btn btn-primary" %>
     <%= link_to "返回列表", list_console_pages_path %>
  </div>
</div>
<%end%>
<script type="text/javascript">
$("#page-form").validate();
</script>