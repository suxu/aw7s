<table class="table">
<thead>
<tr>
	<td>标题</td>
	<td>URL</td>
	<td>所属网站</td>
	<td>Tags</td>
	<td>发布时间</td>
	<td>操作</td>
</tr>
</thead>
<tbody>
<% @pages.each do |page|%>
<tr data-id="<%= page.id %>">
<td><%= link_to page.title,page.url,:target=>"_blank" %></td>
<td><%= page.url %></td>
<td><%= page.domain %></td>
<td><%= page.keywords %></td>
<td><%= page.title %></td>
<td>

<div class="btn-group btn-group-sm">
<button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
操 作 <span class="caret"></span>
</button>
<ul class="dropdown-menu" role="menu">
<li><%= link_to raw('<i class="glyphicon glyphicon-edit"></i> 修改'),edit_console_page_path(page) %></li>
<% if can? :destroy, page %>
<li>
<%= link_to raw('<i class="glyphicon glyphicon-trash"></i> 删除'),console_page_path(page),:method=>:delete,:format=>"js",:remote=>true,:confirm=>"Are you sure?" %>
</li>
<%end%>
</ul>
</div>

</td>
</tr>
<%end%>
</tbody>
</table>