<% if @region.errors.any? %>
<div class="alert alert-block alert-danger fade in">
<button type="button" class="close" data-dismiss="alert">×</button>
<h4 class="alert-heading">
  <%= pluralize(@region.errors.count, "错误") %> 地区被禁止保存
</h4>
<ul>
<% @region.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
<% end %>
</ul>
</div>
<% end %>


<%= form_for [:console,@region],:html=>{:class=>"form form-horizontal",:role=>"form",:id=>"region-form"} do |form| %>
<div class="form-group">
  <label for="" class="col-lg-2 control-label">地区代码:</label>
  <div class="col-lg-3">
    <%= form.text_field :code,:placeholder=>"代码",:class=>"form-control",:required=>"required" %>
  </div>
</div>
<div class="form-group">
  <label for="" class="col-lg-2 control-label">地区名称:</label>
  <div class="col-lg-3">
     <%= form.text_field :name,:placeholder=>"名称",:class=>"form-control",:required=>"required" %>
  </div>
</div>
<div class="form-group">
  <label for="" class="col-lg-2 control-label">英文名称:</label>
  <div class="col-lg-3">
    <%= form.text_field :en_name,:placeholder=>"英文名称",:class=>"form-control" %>
  </div>
</div>
<div class="form-group">
  <label for="" class="col-lg-2 control-label">正常运行:</label>
  <div class="checkbox col-lg-3">
   <label>
    <%= form.check_box :normal %> 状态正常
    </label>
  </div>
</div>

<div class="form-group">
  <div class="col-lg-offset-2 col-lg-10">
     <%= form.submit :"提 交",:class=>"btn btn-primary" %>
     <%= link_to "返回列表", list_console_regions_path %>
  </div>
</div>
<%end%>
<script type="text/javascript">
$("#region-form").validate();
</script>




